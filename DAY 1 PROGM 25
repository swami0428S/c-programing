Mark Calculation

#include <stdio.h>
#include <string.h>
int main()
{
    char a[100];
    float avg;
    int s1,s2,s3,s4,s5,tot;
    scanf("%s",a);
    scanf("%d%d%d%d%d",&s1,&s2,&s3,&s4,&s5);
    tot=s1+s2+s3+s4+s5;
    avg=tot/5.0;
    printf("Name of the Student:%s\n",a);
    printf("Total marks:%d\n",tot);
    printf("Average marks:%.1f\n",avg);
    return 0;
}
