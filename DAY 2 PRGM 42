PATTERN-04

#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int count = 1;

    for (int i = 1; i <= n; i++) {         
        for (int j = 1; j <= n; j++) {    
            if (i == 1 || i == n || j == 1 || j == n)
                printf("%d\t", count);
            else
                printf("\t"); 
            count++;
        }
        printf("\n");
    }

    return 0;
}
