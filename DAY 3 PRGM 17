Sparse Matrix

#include <stdio.h>

int main() {
    int size;
    scanf("%d", &size);  

    int matrix[size][size];
    int zeroCount = 0, totalElements = size * size;
    for(int i = 0; i < size; i++) {
        for(int j = 0; j < size; j++) {
            scanf("%d", &matrix[i][j]);
            if(matrix[i][j] == 0) {
                zeroCount++;
            }
        }
    }
    if(zeroCount > totalElements / 2) {
        printf("Matrix is a Sparse Matrix\n");
    } else {
        printf("Matrix is not a Sparse Matrix\n");
    }

    return 0;
}
