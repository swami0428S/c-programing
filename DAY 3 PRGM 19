Spiral pattern-02

#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    scanf("%s", str);

    int n = strlen(str);
    char matrix[n][n];
    for(int i = 0; i < n; i++)
        for(int j = 0; j < n; j++)
            matrix[i][j] = ' ';
    for(int j = 0; j < n; j++) {
        matrix[0][j] = str[j];
    }
    for(int i = 1; i < n - 1; i++) {
        matrix[i][n - 1] = str[i];
    }
    for(int j = 0; j < n; j++) {
        matrix[n - 1][j] = str[n - 1 - j];
    }
    for(int i = 1; i < n - 1; i++) {
        matrix[i][0] = str[n - 1 - i];
    }
    for(int i = 0; i < n; i++) {
        for(int j = 0; j < n; j++) {
            printf("%c", matrix[i][j]);
            if(j != n-1) printf(" ");
        }
        printf("\n");
    }

    return 0;
}

