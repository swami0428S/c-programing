Series-01

#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int term = 6;
    int diff = 3;

    for (int i = 0; i < n; i++) {
        printf("%d", term);
        if (i != n - 1) {
            printf(" ");
        }
        term += diff;
        diff += 2;
    }

    printf("\n");
    return 0;
}
