Perfect or Not

#include <stdio.h>

int main() {
    int num;
    int sum = 0;
    scanf("%d", &num);
    if (num < 0) {
        printf("Invalid Input\n");
        return 0;
    }
    for (int i = 1; i < num; i++) {
        if (num % i == 0) {
            sum += i;
        }
    }
    if (sum == num && num != 0) {
        printf("The Number %.1f is a Perfect Number.\n", (float)num);
    } else {
        printf("The Number %.1f is a Not Perfect Number.\n", (float)num);
    }

    return 0;
}


