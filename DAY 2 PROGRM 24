Sum of Digits

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>


int main() {
    int num, digit1, digit2, sum;
    scanf("%d", &num);
    if (num < 10 || num > 99) {
        printf("Invalid Input\n");
    } else {

        digit1 = num / 10;     
        digit2 = num % 10;   
        sum = digit1 + digit2;
        printf("Sum of Digit %d is %03d\n", num, sum);
    }

    return 0;
}


