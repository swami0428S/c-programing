2D Prime Matrix

#include <stdio.h>
#include <stdbool.h>
bool isPrime(int n) {
    if (n <= 1) return false;
    if (n == 2) return true;
    if (n % 2 == 0) return false;
    for (int i = 3; i*i <= n; i += 2) {
        if (n % i == 0) return false;
    }
    return true;
}

int main() {
    int m;
    scanf("%d", &m);

    if (m > 7) {
        printf("Enter the valid Input\n");
        return 0;
    }

    int arr[m][m];
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < m; j++) {
            scanf("%d", &arr[i][j]);
        }
    }

    printf("The Prime Array Matrix is:\n");
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < m; j++) {
            if (isPrime(arr[i][j])) {
                printf("T");
            } else {
                printf("F");
            }
            if (j != m-1) printf(" ");
        }
        printf("\n");
    }

    return 0;
}
