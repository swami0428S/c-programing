Numbers Greater Than Target Value

#include <stdio.h>
#include <stdlib.h>
int compare(const void *a, const void *b) {
    return (*(int*)a - *(int*)b);
}

int main() {
    int n, target;
    scanf("%d", &n);

    int arr[n];
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    scanf("%d", &target);
    int temp[n];
    int count = 0;
    for (int i = 0; i < n; i++) {
        if (arr[i] > target) {
            temp[count++] = arr[i];
        }
    }
    qsort(temp, count, sizeof(int), compare);
    printf("The Target values are");
    for (int i = 0; i < count; i++) {
        printf(" %d", temp[i]);
    }
    printf("\n");
    int sum = 0;
    for (int i = 0; i < count; i++) {
        sum += temp[i];
    }
    printf("sum of value is %d\n", sum);
    if (count > 0) {
        double avg = (double)sum / count;
        printf("Average of the value is %.1lf\n", avg);
    } else {
        printf("Average of the value is 0.0\n");
    }

    return 0;
}
