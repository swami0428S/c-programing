ARRAY MEAN

#include <stdio.h>

int main() {
    int n, i;
    scanf("%d", &n);

    int arr[n];
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    double sum = 0;
    for (i = 0; i < n; i++) {
        sum += arr[i];
    }

    double mean = sum / n;

    printf("Array Mean Value is %.2lf\n", mean);

    return 0;
}
